{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run prod",
    "start:dev": "nodemon",
    "build": "npm-run-all clean transpile",
    "transpile": "babel ./server --out-dir dist-server --copy-files",
    "server": "node ./dist-server/bin/www",
    "server:dev": "babel-node ./dist-server/bin/www",
    "dev": "npm-run-all build server:dev",
    "prod": "npm-run-all build server",
    "test": "jest",
    "clean": "rimraf dist-server"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.19.1",
    "@babel/node": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "jest": "^29.0.3",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": ["server/*", "public/*"],
    "ignore": ["**/__tests__/**", "*.test.js", "*.spec.js"]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
