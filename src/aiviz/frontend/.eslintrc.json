{
  "extends": [
    "plugin:vue/recommended",
    "plugin:prettier-vue/recommended"
  ],
  "settings": {
    "prettier-vue": {
      "SFCBlocks": {
        "template": true,
        "script": { "lang": "ts" },
        "style": true,
        "customBlocks": {
          "comments": false
        },
        "usePrettierrc": false,
        "fileInfoOptions": {
          "ignorePath": ".prettierignore",
          "withNodeModules": false
        }
      }
    },
    "rules": {
      "prettier-vue/prettier": [
        "error": {
          "printWidth": 100,
          "singleQuote": true,
          "semi": false,
          "trailingComma": "esnext"
        }
      ]
    }
  }
}
